{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "cssPriority": "user",

  "control-center-width": 400,
  "control-center-height": 720,
  "control-center-margin-top": 13,
  "control-center-margin-bottom": 13,
  "control-center-margin-right": 14,
  "control-center-margin-left": 0,

  "notification-window-width": 800,
  "notification-icon-size": 24,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,

  "timeout": 6,
  "timeout-low": 3,
  "timeout-critical": 0,

  "fit-to-screen": true,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "scripts": {},
  "notification-visibility": {
    "example-name": {
      "state": "muted",
      "urgency": "Normal",
      "app-name": "Spotify"
    }
  },
  "widgets": [
	"dnd",
	"buttons-grid",
    "backlight",
    "volume",
	"mpris",
	"title",
	"notifications"
  ],
  "widget-config": {
    "dnd": {
      "text": "Do not Disturb"
    },
	"title": {
	  "text": "Notifications",
	  "clear-all-button": true,
	  "button-text": "Clear"
	},
	"mpris": {
	  "image-size": 50,
	  "image-radius": 0
	},
	"backlight": {
	  "label": "󰃟"
	},
    "volume": {
      "label": ""
    },
	"buttons-grid": {
	  "actions": [
		{
          "label": "",
          "type": "toggle",
          "active": true,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
          "update-command": "sh -c '[[ $(nmcli r wifi) == \"enabled\" ]] && echo true || echo false'"
        },
        {
          "label": "",
          "type": "toggle",
          "active": true,
		  "command": "blueman-manager",
          "update-command": ""
        },
        {
		  "label": "󰝟",
          "type": "toggle",
          "active": true,
          "command": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
          "update-command": ""
        },
        {
		  "label": "",
		  "command": "hyprlock"
		},
		{
		  "label": "",
		  "command": "bash -c $HOME/.config/ml4w/scripts/wlogout.sh"
		}
	  ]
	}
  }
}
